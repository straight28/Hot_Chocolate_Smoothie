@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-hover table-sm text-center">
            <thead>
                <tr>
                    <th style="width:10%">순  번</th>
                    <th style="width:46%">제  목</th>
                    <th style="width:15%">작성자</th>
                    <th style="width:10%">날  짜</th>
                    <th style="width:7%">조회수</th>
                    <th style="width:7%">추  천</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 6; i++)
                {
                    <tr class="table-active">
                        <th class="textNo">@i</th>
                        <td class="title">제목 @i</td>
                        <td class="author">이름 @i</td>
                        <td class="writeDate">날짜 @i</td>
                        <td class="hitNo">234 @i</td>
                        <td class="voteNum">553 @i</td>
                    </tr>
                }
            </tbody>
        </table>
        @*버튼공간*@
        @*<div>
                <button>버튼</button>
            </div>*@

        @*페이지네이션공간*@
        <hr />

        <div class="row">
            <div class="col-lg-12">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">&laquo;</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
