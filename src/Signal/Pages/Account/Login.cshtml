@page
@model Signal.Pages.Account.LoginModel
@{

    Layout = null;
    ViewData["Title"] = "Test";
}
<!doctype html>
<html lang="kr">
<head>
    <meta name="robots" content="noindex,nofollow" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap-5.0.0-beta2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />

</head>
<body class="text-center">
    <main class="form-signin">
        <div class="card p-3" style="opacity:0.9">
            <div class="card-body">
                <div class="p-2 d-flex justify-content-between">
                    <div>
                        <a class="logo logo-admin" asp-page="/Account/Login">
                            <img src="~/images/logo_gnb.png" height="50" alt="logo">
                        </a>
                    </div>
                    <p class="text-end" style="margin-top:10px;font-size:22px;">Test</p>
                </div>
                <div class="mt-3 mb-4 text-start">
                    <p class="text-muted">Email과 비밀번호를 입력해 주십시오.</p>
                </div>
                <form method="post" asp-page="/Account/Login" class="text-start">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Email</label>
                        @*<input type="text" class="form-control" asp-for="Email" placeholder="Email 입력" autofocus />*@
                        <input type="text" class="form-control" asp-for="Name" placeholder="Email 입력"/>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">비밀번호</label>
                        @*<input type="password" class="form-control mb-0" asp-for="Password" placeholder="Password 입력" />*@
                        <input type="password" class="form-control mb-0" asp-for="Password" placeholder="Password 입력" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3 d-grid gap-2">
                        <button type="submit" class="btn btn-primary" style="background-color:#0373CA">로그인</button>
                        <a class="btn btn-secondary" asp-page="/Login">지원자 로그인 이동</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.0.0-beta2/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>