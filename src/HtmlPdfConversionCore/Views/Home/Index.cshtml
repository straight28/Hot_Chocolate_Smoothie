@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<button id="btnPdf" class="btn btn-primary">PDF 만들기</button>

<div id="pdfContainer" style="text-align:center">
    <h1>List</h1>
    <table>
        <thead>
            <tr>
                <th style="border:1px solid black;">Id</th>
                <th style="border:1px solid black;">Name</th>
                <th style="border:1px solid black;">Roll</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td style="border:1px solid black;">1</td>
                <td style="border:1px solid black;">테스터</td>
                <td style="border:1px solid black;">1001</td>
            </tr>
            <tr>
                <td style="border:1px solid black;">2</td>
                <td style="border:1px solid black;">홍길동</td>
                <td style="border:1px solid black;">2001</td>
            </tr>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $("#btnPdf").click(function () {
        var sHtml = $("#pdfContainer").html();
        sHtml = sHtml.replace(/</g, "StrTag").replace(/>/g, "EndTag");
        window.open('../Home/Aaaaa?html=' + sHtml, '_blank');
    });
</script>


